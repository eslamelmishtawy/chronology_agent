# Production Environment Configuration
# Copy this to .env and update with your actual values

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-secure-secret-key-change-me
ENCRYPTION_KEY=your-64-char-encryption-key-generate-with-openssl-rand-hex-32

# Database Passwords - CHANGE THESE IN PRODUCTION
POSTGRES_PASSWORD=secure-postgres-password-change-me
REDIS_AUTH=secure-redis-password-change-me
CLICKHOUSE_PASSWORD=secure-clickhouse-password-change-me

# MinIO/S3 Configuration - CHANGE THESE IN PRODUCTION
MINIO_ROOT_PASSWORD=secure-minio-password-change-me
LANGFUSE_S3_SECRET_ACCESS_KEY=secure-s3-secret-change-me

# Langfuse Configuration
LANGFUSE_HOST=http://localhost:3000
LANGFUSE_PUBLIC_KEY=pk-lf-eec38d61-338e-42a0-8727-12e48136a21d
LANGFUSE_SECRET_KEY=sk-lf-3de841e7-c088-4252-8f28-f84d1e517a3d

# NextAuth Configuration - CHANGE THIS IN PRODUCTION
NEXTAUTH_SECRET=secure-nextauth-secret-change-me

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODELS_PATH=/app/models

# Application Settings
MAX_FILE_SIZE_MB=50
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=pdf

# Optional: OpenAI API (if you want to use OpenAI instead of Ollama)
# OPENAI_API_KEY=your-openai-api-key-here

# Telemetry and Features
TELEMETRY_ENABLED=true
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=true

# Performance Tuning
LANGFUSE_INGESTION_QUEUE_DELAY_MS=1000
LANGFUSE_INGESTION_CLICKHOUSE_WRITE_INTERVAL_MS=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TLS_ENABLED=false

# ClickHouse Configuration
CLICKHOUSE_URL=http://clickhouse:8123
